{
    "openapi": "3.0.0",
    "info": {
      "title": "GBCC API",
      "version": "1.0.0",
      "description": "API para gerenciar alunos e disciplinas no sistema GBCC"
    },
    "servers": [
      {
        "url": "http://localhost:3000"
      }
    ],
    "paths": {
      "/gbcc_api/alunos": {
        "post": {
          "summary": "Criar um novo aluno",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "email": { "type": "string", "example": "joao@email.com" },
                    "senha": { "type": "string", "example": "senha123" },
                    "nome": { "type": "string", "example": "João Silva" },
                    "apelido": { "type": "string", "example": "Jo" }
                  },
                  "required": ["email", "senha", "nome"]
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Aluno criado com sucesso",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "integer" },
                      "email": { "type": "string" },
                      "nome": { "type": "string" },
                      "apelido": { "type": "string" }
                    }
                  }
                }
              }
            },
            "400": {
              "description": "Erro de validação",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "error": { "type": "string" }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "/gbcc_api/disciplinas": {
        "post": {
          "summary": "Criar uma nova disciplina",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "nome": { "type": "string", "example": "Algoritmos" },
                    "creditos": { "type": "integer", "example": 4 }
                  },
                  "required": ["nome", "creditos"]
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Disciplina criada com sucesso",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "integer" },
                      "nome": { "type": "string" },
                      "creditos": { "type": "integer" }
                    }
                  }
                }
              }
            },
            "400": {
              "description": "Erro de validação",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "error": { "type": "string" }
                    }
                  }
                }
              }
            }
          }
        },
        "get": {
          "summary": "Listar todas as disciplinas",
          "responses": {
            "200": {
              "description": "Lista de disciplinas",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "id": { "type": "integer" },
                        "nome": { "type": "string" },
                        "creditos": { "type": "integer" }
                      }
                    }
                  }
                }
              }
            },
            "500": {
              "description": "Erro no servidor",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "error": { "type": "string" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
  